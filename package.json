{
  "name": "ghaaanoon-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "// docs —— generate tree snapshots": "",
    "docs:app-tree": "node ./tools/gen-tree.js ./src/app ./app-tree.txt",
    "docs:components-tree": "node ./tools/gen-tree.js ./src/components ./components-tree.txt",
    "docs:scan": "npm run docs:app-tree && npm run docs:components-tree",
    "// docs —— update docs-project-structure.md with latest trees": "",
    "docs:update-structure": "node ./tools/update-docs.js --structure ./docs-project-structure.md --app-tree ./app-tree.txt --components-tree ./components-tree.txt",
    "docs:all": "npm run docs:scan && npm run docs:update-structure",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "cross-env ESLINT_STRICT=0 eslint .",
    "lint:report": "cross-env ESLINT_STRICT=1 eslint .",
    "lint:strict": "cross-env ESLINT_STRICT=1 eslint --max-warnings=0 .",
    "lint:ci": "cross-env ESLINT_STRICT=1 eslint .",
    "lint:fix": "cross-env ESLINT_STRICT=1 eslint --fix .",
    "ci": "npm run typecheck && npm run lint:strict && npm run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@radix-ui/react-slot": "^1.2.3",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.19",
    "jalaali-js": "^1.2.8",
    "jose": "^5.9.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.536.0",
    "moment-jalaali": "^0.10.4",
    "next": "15.3.1",
    "prisma": "^6.16.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.3",
    "react-icons": "^5.5.0",
    "swr": "^2.3.4",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.23.8",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.5.4",
    "@types/file-saver": "^2.0.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19",
    "globals": "^15.12.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "cross-env": "^7.0.3",
    "eslint-config-next": "15.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
