* text=auto eol=lf

# اسکریپت‌های ویندوز اجازه CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# چند پسوند رایج را صریحاً LF نگه داریم
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.css  text eol=lf
*.md   text eol=lf
*.sh   text eol=lf
